<p><%= link_to "新規投稿", new_post_path %>

<% @posts.each do |post| %>
  <% if post.video.attached? %>
    <p><%= video_tag(rails_blob_path(post.video), controls: true, style: "max-width: 500px;") %></p>
  <% end %>
  <p><%= post.title %></p>
  <p><%= post.description %></p>
  <p><%= post.industry.name %>
<% end %>