<%= form_with(model: @post, local: true) do |f|%>
  <%= render "shared/error_messages", model: f.object %>
  <%= f.label :video %>
  <%= f.file_field :video %>
  <%= f.text_field :title, placeholder: "タイトルを入力" %>
  <%= f.text_area :description, placeholder: "説明を入力" %>
  <%= f.collection_select(:industry_id, Industry.all, :id, :name, {}) %>
  <%= f.submit "送信" %>
<% end %>

<%# direct_upload: true これはf.file_fieldに追記する。ストレージサービスを使うときにこれで先にストレージサービスにアップロードされる %>